    <script language="JavaScript" type="text/javascript">
	    function submitAuthRequest() {
	    	var form = document.getElementById("loginForm");
	    	
	    	//extra validation, because we can get in a state where the submit button is enabled, but should be disabled because of form validation
	    	//in this case when we click submit the button immediately disables itself according to the bootstrap validators
	    	//we want to determine if this is being executed and do nothing in that case
	    	var platform = navigator.platform;
		    var appversion = navigator.appVersion;
		    var username = form.userId.value;
		    var password = form.pass.value;
		    var acceptedCheckBox = form.accptPlcy.checked;
		    if (username.length==0 || password.length==0 || !acceptedCheckBox) {
		    	//form validation is failing, don't actually submit anything
		    	return;
		    }
	    	
	    	var errorMessage = document.getElementById("errorMessage");
	    	var errorMessageFromModel = document.getElementById("errorMessageFromModel");
	    	var submitButton = document.getElementById("subBtn");
	    	submitButton.disabled = true;
	    	
	    	//put up the waiting icon
	    	$("body").addClass("waitingForRefresh");
	    	
	    	//hide any error message that we got from the model, because this will no longer be the relevent error message
	    	if (errorMessageFromModel!=null) {
	    		errorMessageFromModel.style.display = "none";
	    	}
	    	
	    	//actually make the RESTful call
	      	$.ajax({
		    	url:"/api/authRest",
		    	type:"POST",
		    	data:JSON.stringify({
		    		platform:navigator.platform,
		    		appversion:navigator.appVersion,
		    		username:form.userId.value,
		    		password:form.pass.value
		    	}),
		    	dataType:"json",
		    	contentType:"application/json",
		    	mimeType:"application/json"
		    }).done(function(data) {
		    	//this function is called when the authentication was successful
		    	response = data;
		    	//hide the error message DOM element
	    		errorMessage.style.display = "none";
	    		//invoke a redirect after the given delay
	    		var delay = response.refreshDelay;
	    		if (typeof delay === 'undefined') {
	    			delay = 0;
	    		}
	    		var callback = function() {
	    			window.location = "/clientStatus.!^";
	    		}
	    		if (delay>0) {
	    			setTimeout(callback,delay*1000);
	    		} else {
	    			callback();
	    		}
		    }).fail(function(xhr) {
		    	//this function is called when the authentication failed
		    	//in this case we must first parse the response manually
		    	response = $.parseJSON(xhr.responseText);
		    	//hide the waiting icon
		    	$("body").removeClass("waitingForRefresh");
		    	//we want to put the error message in the appropriate DOM element and make it visible
		    	errorMessage.innerHTML = response.error;
	    		errorMessage.style.display = "block";
	    		submitButton.disabled = false;
		    });
	    }
	    
	    function popupWithReducedSize(url) {
		    var width = window.innerWidth*2/3;
		    if (width<200) {
		    	width = 200;
		    }
		    var height = window.outerHeight-100;
		    if (height<100) {
		    	height = 100;
		    }
	    	window.open(url, '', 'toolbar=0,scrollbars=1,location=0,statusbar=0,menubar=0,resizable=1,width='+width+',height='+height);
	    }
    </script>


